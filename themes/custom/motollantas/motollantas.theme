/**
 * Implements hook_preprocess_region().
 */
function motollantas_preprocess_region(&$variables) {
  if (isset($variables['region']) && in_array($variables['region'], ['footer','footer_bottom'])) {
    $variables['attributes']['class'][] = 'container';
  }
}